{{>header_dashboard}}

<div class="container mt-5 pt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 px-sm-0">
      <h1>Dashboard</h1>
      <hr>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6 border bg-light">
      <h5 class="mt-3 text-muted">API</h5>
      <hr>
      <div class="form-group">
        <label for="text-area" class="control-label">Your API Key:</label>
        <textarea name="notes" rows="3" cols="20" id="text-area" class="form-control" disabled>{{api_key}}</textarea>
        <small class="text-muted">Should be kept private and should not be shared.</small>
      </div>
      <h5 class="mt-5 text-muted">Your Account</h5>
      <hr>
      <div class="form-group row">
        <label class="col-3 col-sm-2 col-form-label">Name:</label>
        <div class="col-9 col-sm-10">
          <input type="text" readonly class="form-control-plaintext" value={{first_name}} {{last_name}}>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-3 col-sm-2 col-form-label">Email:</label>
        <div class="col-9 col-sm-10">
          <input type="text" readonly class="form-control-plaintext" value={{email}}>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-3 col-sm-2 col-form-label">Joined:</label>
        <div class="col-9 col-sm-10">
          <input type="test" readonly class="form-control-plaintext" value={{formattedJoinAt}}>
        </div>
      </div>
    </div>
  </div>
</div>